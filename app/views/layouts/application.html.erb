      <%end%>
      <%if alert%>
      <p class="alert alert-danger"><%=alert%></p>
      <%end%>
    <%end%>
    
    <% if user_signed_in?%>
    <div class="container-fluid">
    <% else %>
    <div>
    <%end%>
      <%= yield %>
    </div>

    <footer class="page-footer">
      <div class="container-fluid">
        duckythebird
      <div>
    </footer>
